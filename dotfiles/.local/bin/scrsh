#!/bin/sh
## Screenshot with 3 modes; all are self-explaintory

# Use maim with highest quality
cmd="scrot -q 100"

# Get mode
case $1 in
	"full") mode="$1"
		opts="" ;;
	"selected") mode="$1"
		opts="-s -f" ;;
	"window") mode="$1"
		opts="-u -b" ;;
	*) ;;
esac

if [ ! -z $mode ]; then
	out="${HOME}/Screenshots/screenshot-${mode}-$(date +'%F_%H-%M-%S').png"
	${cmd} ${opts} ${out}
fi
