#!/bin/sh
# Script by LukeSmith (https://github.com/lukesmithxyz) 

update() {
	sum=0
	for arg; do
		read -r i < "$arg"
		sum=$(( sum + i ))
	done
	cache=${XDG_CACHE_HOME:-$HOME/.cache}/${1##*/}
	[ -f "$cache" ] && read -r old < "$cache" || old=0
	printf %d\\n "$sum" > "$cache"
   	printf %d\\n $(( sum - old ))
}

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes | numfmt --to=iec)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes | numfmt --to=iec)

printf "$tx/$rx\\n"
