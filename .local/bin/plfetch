#!/usr/bin/env bash
# Originally from Nathanial Maia' script

## Colors, foregrounds and backgrounds
fg=$'\e[0m'
for n in {0..7}; do printf -v fg${n} "%b" "\e[1;3${n}m"; done
for n in {0..7}; do printf -v bg1${n} "%b" "\e[1;4${n}m"; done
for n in {0..7}; do printf -v bg2${n} "%b" "\e[1;10${n}m"; done

## Looping letters, useful for later
lett_loop() {
	loop_num=$(printf "%$1s")
	echo ${loop_num// /$2};
}

# OS/Distro, Kernel version, WM being used and packages number
os=$(head -n1 /etc/os-release | cut -f 2 -d '"')
kernel=$(uname -r)
wm=$(wmctrl -m | head -n1)
packs=$(pkg info | wc -l)
# Set HOST if not set by the shell
[ -z $HOST ] && HOST=$(hostname);

clear

cat <<- EOF

${OFFSET} $fg5-->$fg2    $USER$fg3@$fg1$HOST
${OFFSET} $fg5$(lett_loop $((${#USER} + 12 + ${#HOST})) "-")>

${OFFSET}   $fg6->$fg4  OS/Distro$fg1: $fg${os##*=}
${OFFSET}   $fg6->$fg4  Kernel$fg1:    $fg${kernel%%-*}
${OFFSET}   $fg6->$fg4  Packages$fg1:  $fg${packs##* }
${OFFSET}   $fg6->$fg4  Shell$fg1:     $fg${SHELL##*/}
${OFFSET}   $fg6->$fg4  WM$fg1:        $fg${wm##* }
${OFFSET}   $fg6->$fg4  Terminal$fg1:  $fg$TERM

${OFFSET} $fg5-->  $bg10   $bg11   $bg12   $bg13   $bg14   $bg15   $bg16   $bg17   $fg
${OFFSET} $fg5-->  $bg20   $bg21   $bg22   $bg23   $bg24   $bg25   $bg26   $bg27   $fg

EOF
