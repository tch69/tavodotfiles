#!/bin/sh
## Status script

while true; do
	disk=$(df -h | awk '/\/dev\// {print $1" "$3"/"$2" "$5" "$4}')
	mem=$(freecolor  -om | awk '/Mem:/ {print $3"M/"$2"M"}')
	lvol=$(amixer get Master | awk '/Front Left:/ {print $5}' | tr -d '[][]' )
	rvol=$(amixer get Master | awk '/Front Right:/ {print $5}' |  tr -d '[][]' )
	xsetroot -name " $disk | Mem: $mem | Vol: $lvol|$rvol | Engine: $(ibus engine) | $(date +"%H:%M:%S [%d/%m/%y]")"
	sleep 0.1;
done
