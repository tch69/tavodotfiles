#!/usr/local/bin/bash
## Dummy info script

# Color used by the script
color=$(echo $((RANDOM % 256 +1 )))

# OS/Distro using
os=$(uname)

# OS/Kernel version
ver=$(uname -r)

# WM using
wm=$(wmctrl -m | head -n1)

# Amount of packages installed
pack=$(ls /var/db/pkg | gwc -l)

## Script, start, NOW!
clear

echo -e ''
echo -e '\e[1;38;5;'$color'm         '$USER'@'$HOST'	'
echo -e ''
echo -e '\e[1;38;5;'$color'm      OS/Distro:\e[0m '${os##*=}'	'
echo -e '\e[1;38;5;'$color'm        Version:\e[0m '$ver'	'
echo -e '\e[1;38;5;'$color'm       Packages:\e[0m '$pack'	'
echo -e '\e[1;38;5;'$color'm          Shell:\e[0m '${SHELL##*/}''
echo -e '\e[1;38;5;'$color'm             WM:\e[0m '${wm##* }'	'
echo -e '\e[1;38;5;'$color'm       Terminal:\e[0m '$TERM'	'
echo -e ''
echo -e '     \e[1;40m   \e[0;41m   \e[0;42m   \e[0;43m   \e[0;44m   \e[0;45m   \e[0;46m   \e[0;47m   \e[0m'
echo -e '     \e[1;100m   \e[1;101m   \e[1;102m   \e[1;103m   \e[1;104m   \e[1;105m   \e[1;106m   \e[1;107m   \e[0m'
echo -e ''

unset color
unset os
unset ver
unset pack
unset wm
